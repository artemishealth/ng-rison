{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "inlineSources": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "strict": false,
    "strictNullChecks": true,
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "types": ["node"]
  }
}
